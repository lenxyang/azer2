    "file_util.h",
    "image.cc",
    "image.h",
    "res_path.cc",
    "res_path.h",
    "res_path_parser.cc",
    "res_path_parser.h",
    "repository_node.cc",
    "repository_node.h",
    "resource.h",
    "string.cc",
    "string.h",
    "tree_node.h",
  ]
  deps = [
    "//base",
