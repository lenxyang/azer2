    "widget_context.cc",
    "widget_context.h",
    "widget_event_dispatcher.cc",
    "widget_event_dispatcher.h",
    "widget_targeter.cc",
    "widget_targeter.h",
    "widget_tree_host.cc",
    "widget_tree_host.h",
    "widget_tree_host_win.cc",
    "widget_tree_host_win.h",
    "widget.cc",
    "widget.h",
  ]

  deps = [
    "//skia",
    "//ui/events",
    "//ui/events/platform",
